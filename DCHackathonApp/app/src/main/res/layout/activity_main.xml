<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demouser.dchackathonapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Welcome to our Music App!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />


    <TextView
        android:id="@+id/howManySongs"
        android:layout_width="345dp"
        android:layout_height="43dp"
        android:text="1.) How many songs do you want on your playlist"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/chooseMood"
        android:layout_width="345dp"
        android:layout_height="43dp"
        android:text="2.) Pick a mood for your playlist"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="160dp" />


    <EditText
        android:id="@+id/numberOfSongs"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="104dp" />

</android.support.constraint.ConstraintLayout>

